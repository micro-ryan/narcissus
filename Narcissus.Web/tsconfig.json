{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "suppressImplicitAnyIndexErrors": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [ "./node_modules/@types" ],
    "types": [ "node" ],
    "lib": [ "es2015", "dom" ]
  },
  "exclude": [
    "node_modules"
  ]
}
